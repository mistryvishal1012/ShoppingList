<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.AddShop.AddShopFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragmentshopname_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/Theme.AppCompat"/>

    <EditText
        android:id="@+id/tv_shopname"
        android:layout_margin="8dp"
        android:layout_below="@id/fragmentshopname_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edtv_shopname" />


    <EditText
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shopname"
        android:hint="Address"
        android:layout_margin="8dp"/>


    <Button
        android:id="@+id/btn_save_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/btn_save"
        android:layout_below="@id/tv_address"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>